@model CBIB.Models.Author

@{
    ViewData["Title"] = "Details";
}

<h3>List of research papers </h3>
<h5>@Html.DisplayFor(model => model.Name)</h5>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Journals) <br />
        </dt>
        <dd>
            <table class="table">
                <tr>
                    <th>Title</th>
                    <th>Year</th>
                </tr>
                @foreach (var item in Model.Journals)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Title)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Year)
                        </td>
                    </tr>
                }
            </table>
        </dd>

    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.AuthorID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
